<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="styles.css"> <!-- Link to your CSS -->
</head>
<body>
    <header>
        <h1>Welcome, <%= user.first_name %>!</h1>
        <nav>
            <a href="/logout">Logout</a>
        </nav>
    </header>

    <h2>Your Bookings</h2>
    <table>
        <tr>
            <th>Doctor</th>
            <th>Date</th>
            <th>Time</th>
            <th>Notes</th>
        </tr>
        <% bookings.forEach(booking => { %>
            <tr>
                <td><%= booking.doctor %></td>
                <td><%= booking.date %></td>
                <td><%= booking.time %></td>
                <td><%= booking.notes %></td>
            </tr>
        <% }) %>
    </table>

    <h2>Book a New Session</h2>
    <a href="/booking">Book a Session</a> <!-- Link to the booking page -->

</body>
</html>
